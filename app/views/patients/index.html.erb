<div class = "top-container h-screen m-5">
  <h2 class ="text-blue-600 text-[30px] leading-8 text-left font-poppins">Dr. Shevchenko</h2>
  <h3 class ="text-blue-600 text-[15px] leading-8 text-left font-poppins mb-3">Central Hospital SBU</h3>

        <% patient = @patients_matched.first %>
          <% link_to edit_patient_path(patient) %>
            <div class="bg-blue-100 rounded-md flex-col p-3 mb-3">
              <div class="patient-info-left">
                <div class="patient-info text-left font-poppins text-blue-600">
                  <p>Patient: <%= patient.name.first %></p>
                </div>
                <br>
                <div class="patient-info text-left font-poppins text-blue-600">
                  <p>Location: <%= patient.location %></p>
                </div>
                <br>
                <div class="patient-info text-left font-poppins text-blue-600">
                  <p>Phone number: 1234567</p>
                </div>
                <br>
                <div class="patient-info text-left font-poppins text-blue-600">
                  <p>Details: <%= patient.details %></p>
                </div>
              </div>
              <div class="patient-info text-left font-poppins">
                <p class = "text-yellow-600 bg-yellow-100 p-2 rounded-lg">
                <%= link_to "Pending", edit_patient_path(patient) %></p>
            </div>


            <br>

  </div>
